<h3>New Image</h3>

<% if @image.errors.any? %>
  <div id="error_explanation">
    <h5>
      <%= pluralize(@image.errors.count, "error") %> prohibited
      this image from being saved:
    </h5>
    <ul>
      <% @image.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with scope: :image, url: images_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :link %><br>
    <%= form.text_area :link %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>