<div class = 'row'>
  <div class = 'col'><h3>Listing images</h3></div>
</div>
<div class = 'row'>
  <div class = 'col'>
    <h5>Tags</h5>
    <% ActsAsTaggableOn::Tag.all.each do |tag| %>
      <%= link_to tag.name, images_path(tag: tag.name), class:'badge badge-success' %>
    <% end %>
  </div>
</div>
<div class = 'row gallery'>
  <% @images.each do |i| %>
    <div class = 'col-lg-4 col-md-4 col-sm-12 gallery__card'>
      <div class = 'card gallary__card' >
        <%= image_tag(i.link, class: "card-img-top", alt: 'Image Preview') %>
        <div class = 'card-body'>
          <h5 class = 'card-title'><%= i.title %></h5>
          <p>Link: <%= i.link %></p>
          <p>
            Tags:
            <% i.tags.each do |tag| %>
              <%= link_to tag.name, images_path(tag: tag.name), class:'badge badge-success' %>
            <% end %>
          </p>
          <%= link_to 'Show', image_path(i), class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Add image', new_image_path%>
